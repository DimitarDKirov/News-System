extends ../_layout

block app-title
    | Register Awesome News 3000

block content
    h1 Register here: 

    div.panel.panel-default.col-lg-10
        div.panel-body
            form(method="POST" class="form-horizontal" id="authenticate" action="/user/register")
                div.form-group
                    label(for="username" class="col-sm-2 control-label")
                        | Username
                    div.col-sm-6
                        input(type="text" class="form-control" id="username" name="username" placeholder="Username") 
                    div.form-group
                    label(for="email" class="col-sm-2 control-label")
                        | Email
                    div.col-sm-6
                        input(type="text" class="form-control" id="email" name="email" placeholder="Email")  
                div.form-group
                    label(for="password" class="col-sm-2 control-label")
                        | Password
                    div.col-sm-6
                        input(type="password" class="form-control"  id="password" name="password" placeholder="Password") 
                div.form-group
                    div.col-sm-offset-2.col-sm-10
                        button(type="submit" class="btn btn-default" value="Register") 
                            | Register

    script(src="/static/bower_components/crypto-js/crypto-js.js")          
    script(src="/static/scripts/loginValidator.js")