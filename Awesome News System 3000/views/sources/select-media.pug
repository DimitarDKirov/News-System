extends ../_layout

block app-title
    | Select Favourite Media

block content
    h1 Select your favourite media to receive the latest news from them

    
    form#create-shift-form(action="/sources/select-media", method="post")
        div.form-group
            each source in result
                div.col-sm-6.col-md-4
                    div.checkbox-inline
                        div.thumbnail
                            a(href= source.url)
                                img.img-responsive(src= source.urlsToLogos.small alt="source-logo")
                        input.checkbox-input(type="checkbox", name=`selectedMedia`, value=source.id, id=`select-media-${source.id}`)
                        label(for=`select-media-${source.id}`)= source.name
        
        div.form-group.panel.panel-default.media-select
            div.col-lg-10
                button.btn.btn-success.btn-lg.media-save-btn(type="submit" value="Submit") 
                    | Save